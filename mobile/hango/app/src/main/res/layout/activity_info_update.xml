<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InfoUpdateActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B0DCF8"
        android:orientation="horizontal">
        <ImageView
            android:id ="@+id/iv_arrow_back_update_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_arrow_back"/>
        <TextView
            android:id="@+id/MainLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle = "bold"
            android:text="회원정보 변경"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:layout_margin="5dp"
            android:textSize="40sp"
            android:typeface="normal" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop = "20dp"
                android:text = "이름"
                android:textColor="#3f3f3f"
                android:fontFamily="@font/barungothicbold"
                android:textSize = "30sp"/>

            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:inputType="textPersonName"
                android:textSize="20sp"
                android:background="@drawable/textbox_radius"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop = "20dp"
                android:text = "아이디"
                android:textColor="#3f3f3f"
                android:fontFamily="@font/barungothicbold"
                android:textSize = "30sp"/>

            <TextView
                android:id="@+id/tv_user_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:inputType="textPersonName"
                android:textSize="20sp"
                android:background="@drawable/textbox_radius" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop = "20dp"
                android:text = "이메일"
                android:textColor="#3f3f3f"
                android:fontFamily="@font/barungothicbold"
                android:textSize = "30sp"/>

            <EditText
                android:id="@+id/et_user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:inputType="textPersonName"
                android:textSize="20sp"
                android:background="@drawable/textbox_radius" />

            <TextView
                android:id="@+id/tv_user_passwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop = "20dp"
                android:text = "비밀번호"
                android:textColor="#3f3f3f"
                android:fontFamily="@font/barungothicbold"
                android:textSize = "30sp"/>

            <EditText
                android:id="@+id/et_user_passwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:inputType="textPassword"
                android:textSize="20sp"
                android:background="@drawable/textbox_radius"/>

            <TextView
                android:id="@+id/tv_user_new_passwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop = "20dp"
                android:text = "새 비밀번호"
                android:textColor="#3f3f3f"
                android:fontFamily="@font/barungothicbold"
                android:textSize = "30sp"/>

            <EditText
                android:id="@+id/et_user_new_passwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:inputType="textPassword"
                android:textSize="20sp"
                android:background="@drawable/textbox_radius"/>

            <TextView
                android:id="@+id/tv_user_new_passwd_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop = "20dp"
                android:text = "새 비밀번호 확인"
                android:textColor="#3f3f3f"
                android:fontFamily="@font/barungothicbold"
                android:textSize = "30sp"/>

            <EditText
                android:id="@+id/et_user_new_passwd_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:inputType="textPassword"
                android:textSize="20sp"
                android:background="@drawable/textbox_radius"/>

            <Button
                android:id="@+id/btn_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop = "40dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/btn_radius"
                android:fontFamily="@font/barungothicbold"
                android:text="회원 정보 변경"
                android:textColor="#3f3f3f"
                android:textSize="20sp"  />
        </LinearLayout>
    </ScrollView>

</LinearLayout>