<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".UpdateDrinkActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shadow_radius">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "음료수정"
            android:textSize="40dp"
            android:textColor="#000000"
            android:fontFamily="@font/barungothicbold"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/et_drink_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:textColorHint="#9E9E9E"
            android:backgroundTint = "#B0DCF8"
            android:hint="음료 이름"
            android:textColor="#000000"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/et_drink_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:backgroundTint = "#B0DCF8"
            android:hint="음료 가격"
            android:textColorHint="#9E9E9E"
            android:textColor="#000000"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/et_drink_max_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:hint="음료를 최대로 채울 수 있는 음료 개수"
            android:textColorHint="#9E9E9E"
            android:backgroundTint = "#B0DCF8"
            android:textColor="#000000"
            android:textSize="20sp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id ="@+id/btn_drink_update_accept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = " 수정 "
                    android:layout_marginLeft="40dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/btn_accept"
                    android:layout_alignParentLeft="true"/>
                <Button
                    android:id ="@+id/btn_drink_update_deny"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = " 취소 "
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="#000000"
                    android:background="@drawable/btn_deny"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
    </LinearLayout>
</LinearLayout>